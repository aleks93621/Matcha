        <script>
            var socket = io.connect('http://localhost:8080');

            $('#submit').on('click', function(){
                var sexe_select = $('#select_sexe').val();
                var orientation_sexuelle = $('#select_orientation').val();
                var bio = $('#bio').val();
                var liste_interets = $('#liste_interets').val();
                var upload_img = $('#upload_img').val();
                var pseudo = $('#pseudo').val();
                var prenom = $('#prenom').val();
                var nom = $('#nom').val();
                var mail = $('#mail').val();

                if (mail) {
                    var extension = upload_img.substr( (upload_img.lastIndexOf('.') +1) )
                    console.log(sexe_select + " - " + orientation_sexuelle + " - " + bio + " - " + liste_interets + " - " + extension + " - " + pseudo + " - " + prenom + " - " + nom + " - " + mail);
                }
                return false;
            });

            function validateEmail(email) {
                var re = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
                return re.test(email);
            }

            var pseudo_key = function () {
                var pseudo = $('#pseudo').val();
                if (pseudo && pseudo.length > 4 && pseudo.length <= 20) {
                    $('#pseudo').attr('style', 'border: 1.5px solid green;');
                }
                else if (pseudo.length > 0) {
                    $('#pseudo').attr('style', 'border: 1.5px solid red;');
                }
                else {
                    $('#pseudo').attr('style', '');
                }
            }
            $('#pseudo').keyup(pseudo_key)
                .keypress(pseudo_key)
                .blur(pseudo_key)
                .change(pseudo_key)

            var prenom_key = function () {
                var prenom = $('#prenom').val();
                if (prenom && prenom.length > 1 && prenom.length <= 40) {
                    $('#prenom').attr('style', 'border: 1.5px solid green;');
                }
                else if (prenom.length > 0) {
                    $('#prenom').attr('style', 'border: 1.5px solid red;');
                }
                else {
                    $('#prenom').attr('style', '');
                }
            }
            $('#prenom').keyup(prenom_key)
                .keypress(prenom_key)
                .blur(prenom_key)
                .change(prenom_key)

            var nom_key = function () {
                var prenom = $('#nom').val();
                if (prenom && prenom.length > 1 && prenom.length <= 40) {
                    $('#nom').attr('style', 'border: 1.5px solid green;');
                }
                else if (prenom.length > 0) {
                    $('#nom').attr('style', 'border: 1.5px solid red;');
                }
                else {
                    $('#nom').attr('style', '');
                }
            }
            $('#nom').keyup(nom_key)
                .keypress(nom_key)
                .blur(nom_key)
                .change(nom_key)

            var mail_key = function () {
                var mail = $('#mail').val();
                if (mail && validateEmail(mail)) {
                    $('#mail').attr('style', 'border: 1.5px solid green;');
                }
                else if (mail.length > 0) {
                    $('#mail').attr('style', 'border: 1.5px solid red;');
                }
                else {
                    $('#mail').attr('style', '');
                }
            }
            $('#mail').keyup(mail_key)
                .keypress(mail_key)
                .blur(mail_key)
                .change(mail_key)

        </script>
