                            <div class="form-top-right">
                                <i class="fa fa-list"></i>
                            </div>
                        </div>

                        <div class="form-bot" style="height: 150px;">
                            <textarea style="height: 100px;" id="liste_interets" class="form-control bio_input" placeholder="Liste d'intérêts"></textarea>
